table {
    width: 100%;
    border-collapse: collapse;
    border-color: #cccccc;
}

html, body {
    font-family: sans-serif;
    font-size: 13px;
    color: #333;
}


thead, tbody, tfoot, tr, td, th {
    border-color: inherit;
    border-style: solid;
    border-width: 0;
    padding: 0;
    margin: 0;
}

td, th {
    padding: 3px;
    border: 1px solid #cccccc;
}

tr:nth-of-type(even), th {
    background: #eeeeee;
}
